 <!-- ====== Contact Section ====== -->
 <footer id="contact">
 <div class="footer section-padding">
        <div class="container">
          <h1>Contact Us</h1>
          <form name="contactForm" action="/sendContactEmail" class="form contact" method="post" novalidate>

            <div class="row">
              <div class="col-xs-12 col-md-6">
                <div class="form-group">
                  <label for="name" class="sr-only">Name</label>
                  <input type="text" class="form-control" name="name" ng-model="name" placeholder="Name" required>
                  <small ng-show="contactForm.name.$invalid && !contactForm.name.$pristine" class="text-danger">Name is required.</small>
                </div> <!-- end .form-group -->

                <div class="form-group">
                  <label for="email" class="sr-only">Email</label>
                  <input type="email" class="form-control" name="email" ng-model="email" placeholder="Email" required>
                  <small ng-show="contactForm.email.$error.email && !contactForm.email.$pristine" class="text-danger">Enter a valid email.</small>
            	<small ng-show="contactForm.email.$error.required && !contactForm.email.$pristine" class="text-danger">Email Required</small>
        
                </div> <!-- end .form-group -->

                <div class="form-group">
                  <label for="subject" class="sr-only">Subject</label>
                  <input type="text" class="form-control" name="subject" placeholder="Subject" ng-model="subject" required>
                  <small ng-show="contactForm.subject.$invalid && !contactForm.subject.$pristine" class="text-danger">Subject is required.</small>
                </div> <!-- end .form-group -->
              </div> <!-- end .form> .row> .col-md-4 -->
              
              <div class="col-xs-12 col-md-6">
                <div class="form-group">
                  <label for="message" class="sr-only">Message</label>
                  <textarea name="message"  placeholder="Message" ng-model="message" ng-minlength="10" required></textarea>
                 <small  ng-show="contactForm.message.$error.required && !contactForm.message.$pristine" class="text-danger">Message Required</small>
	             <small class="text-danger" ng-show="contactForm.message.$error.minlength && !contactForm.message.$pristine">Message must be 10 characters long</small>
	           
                </div> <!-- end .form-group -->
              </div>
            </div> <!-- end .form> .row -->

            <button class="btn btn-default contact-submit custom-btn" type="submit"  ng-disabled="contactForm.$invalid"><i class="fa fa-hand-o-right"></i>SUBMIT</button>
          </form> <!-- end .form -->   
        </div> <!-- end .container -->
      </div> <!-- end .footer -->
      </footer>